description "start/stop/control statsd"
start on started networking and filesystem
stop on runlevel [!2345]

# prevent thrashing - 10 restarts in 5 seconds
respawn
respawn limit 10 5

# Make a log available in /var/log/upstart/statsd.log
console log

exec {{ statsd_nodejs }} {{ statsd_root_dir }}/current/stats.js {{ statsd_root_dir }}/current/config.js
